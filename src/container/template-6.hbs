<header class="header">
    <a href="#">
        {{> logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

<main class="main">

    {{#with info}}
    <div class="info">
        <h1>{{title}}</h1>
        <p>{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <div>
                <input type="{{type}}" class="form_input" placeholder="{{placeholder}}" name="{{name}}"
                    id="form-input-{{id}}">
            </div>
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div class="super_checkbox"></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>

<section>
    {{#with updates}}
    <div class="updates">
        <h3 class="updates_title">{{title}}</h3>
        {{#each list}}
        <div class="user_descr">

            <img src="https://picsum.photos/32" alt="User Image" class="user_image">
            <strong>{{nickname}}</strong>
            <p>{{description}}</p>

            {{/each}}
            <a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
        </div>
        {{/with}}
</section>

<div class="expirience">
    {{#with expirience}}
    <div class="exp_title">
        <h2>{{title}}</h2>
        <div class="exp_badge">{{badge}}</div>
    </div>

    <div class="exp_list">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>



<footer class="footer" id="#">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>