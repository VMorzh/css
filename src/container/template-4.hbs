<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descr}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    <div class="card_feature">
        <div class="card_image" style="background-image: url({{photo}})"></div>
        <h2 class="card_title">{{heading}}</h2>
        <p class="card_text">{{info}}</p>
        <a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
    </div>
    {{/each}}
</div>

<div class="actions_form">
    {{#each actions }}
    <div class="actions_content">
        <h3 class="actions_title">{{heading}}</h3>
        <a href="{{url}}" class="actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>